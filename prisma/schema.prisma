generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id String @id @default(uuid())

  name             String
  coordinator_name String
  whatsapp         String
  email            String @unique
  password_hash    String

  cep    String
  state  String
  city   String
  street String
  number String

  latitude  Decimal
  longitude Decimal

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id String @id @default(uuid())

  name              String
  about             String
  age               String
  size              String
  energy_stat       String
  space_requirement String
  orgId             String
  org               Org    @relation(fields: [orgId], references: [id])

  @@map("pets")
}
